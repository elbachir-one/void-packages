# Template file for 'SDL2_net'
pkgname=SDL2_net
version=2.2.0
revision=1
build_style=gnu-configure
configure_args="--disable-static"
hostmakedepends="pkg-config"
makedepends="SDL2-devel"
short_desc="SDL2 networking module"
maintainer="Orphaned <orphan@voidlinux.org>"
license="BSD-3-Clause"
homepage="https://www.libsdl.org/projects/SDL_net/"
distfiles="https://www.libsdl.org/projects/SDL_net/release/${pkgname}-${version}.tar.gz"
checksum=4e4a891988316271974ff4e9585ed1ef729a123d22c08bd473129179dc857feb

post_install() {
	vlicense LICENSE.txt
}

SDL2_net-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
